<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgeCalculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fgBlack</item>
        <item name="colorPrimaryVariant">@color/fgBlack</item>
        <item name="colorOnPrimary">@color/bgWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/fgBlue</item>
        <item name="colorSecondaryVariant">@color/fgBlue</item>
        <item name="colorOnSecondary">@color/bgWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.App.TopLeftCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">13%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.LeftCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>